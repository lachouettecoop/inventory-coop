services:
  db:
    image: mongo:4.4
    restart: unless-stopped
    ports:
      - "27017:27017"
    env_file:
    - db.env
    volumes:
      - ./volumes/db:/data/db

  api:
    image: inventory-coop
    build:
      context: .
    env_file:
      - api.env
    environment:
      STATIC_PATH: /app/client/dist/static
      EVE_SETTINGS: /app/api/settings.py
    ports:
      - "8000:80/tcp"
    links:
      - db:db
